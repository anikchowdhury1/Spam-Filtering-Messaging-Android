<resources>

    <!-- Light theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <!-- Custom resources -->
        <item name="colorAccent">@color/accent</item>
        <item name="colorAccentSecondary">@color/accent2</item>
        <item name="colorTitleBackground">@color/titleBackground</item>
        <item name="colorBorder">@color/border</item>
        <item name="colorIncomeSms">@color/incomeSms</item>
        <item name="colorOutcomeSms">@color/outcomeSms</item>
        <item name="colorTextSms">@color/textSms</item>
        <item name="colorPressed">@color/pressed</item>
        <item name="colorChecked">@color/checked</item>
        <item name="colorText">@color/text</item>
        <item name="colorTextSecondary">@color/text2</item>
        <item name="colorEdit">@color/edit</item>
        <item name="colorWindowBackground">?android:windowBackground</item>

        <!-- Android resources -->
        <item name="android:textColorSecondary">?colorTextSecondary</item>
        <item name="android:textColorLink">@color/link</item>
        <item name="android:textSize">@dimen/textSize16</item>

        <!-- Drawables -->
        <item name="selector_control">@drawable/selector_control_light</item>
        <item name="selector_edit">@drawable/selector_edit_light</item>
        <item name="selector_checkbox_tint">@drawable/selector_checkbox_tint_light</item>
        <item name="selector_checkbox">@drawable/selector_checkbox</item>
        <item name="selector_nav_bar">@drawable/selector_nav_bar_light</item>
        <item name="shape_unread_sms">@drawable/shape_unread_sms_light</item>
        <item name="shape_border">@drawable/shape_border_light</item>
        <item name="shape_side_nav_bar">@drawable/shape_side_nav_bar_light</item>

        <!-- Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Style refs -->
        <item name="AppTheme.PopupOverlay">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="AppTheme.AppBarOverlay">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="AppTheme.ToolbarTitle">@style/AppTheme.ToolbarTitle</item>
        <item name="AppTheme.Toolbar">@style/AppTheme.Toolbar.Light</item>
        <item name="AppTheme.ListView">@style/AppTheme.ListView.Light</item>
    </style>

    <!-- Toolbar light theme -->
    <style name="AppTheme.Toolbar.Light" parent="AppTheme.Light">
        <item name="android:textColorSecondary">?colorAccent</item>
    </style>

    <!-- ListView light theme -->
    <style name="AppTheme.ListView.Light" parent="AppTheme.Light">
        <item name="android:divider">?colorBorder</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Toolbar title theme -->
    <style name="AppTheme.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textSize20</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <!-- Custom resources -->
        <item name="colorAccent">@color/accent_d</item>
        <item name="colorAccentSecondary">@color/accent2_d</item>
        <item name="colorTitleBackground">@color/titleBackground_d</item>
        <item name="colorBorder">@color/border_d</item>
        <item name="colorIncomeSms">@color/incomeSms_d</item>
        <item name="colorOutcomeSms">@color/outcomeSms_d</item>
        <item name="colorTextSms">@color/textSms_d</item>
        <item name="colorPressed">@color/pressed_d</item>
        <item name="colorChecked">@color/checked_d</item>
        <item name="colorText">@color/text_d</item>
        <item name="colorTextSecondary">@color/text2_d</item>
        <item name="colorEdit">@color/edit_d</item>
        <item name="colorWindowBackground">?android:windowBackground</item>

        <!-- Android resources -->
        <item name="android:textColorSecondary">?colorTextSecondary</item>
        <item name="android:textColorLink">@color/link_d</item>
        <item name="android:textSize">@dimen/textSize16</item>

        <!-- Drawables -->
        <item name="selector_control">@drawable/selector_control_dark</item>
        <item name="selector_edit">@drawable/selector_edit_dark</item>
        <item name="selector_checkbox_tint">@drawable/selector_checkbox_tint_dark</item>
        <item name="selector_checkbox">@drawable/selector_checkbox</item>
        <item name="selector_nav_bar">@drawable/selector_nav_bar_dark</item>
        <item name="shape_unread_sms">@drawable/shape_unread_sms_dark</item>
        <item name="shape_border">@drawable/shape_border_dark</item>
        <item name="shape_side_nav_bar">@drawable/shape_side_nav_bar_dark</item>

        <!-- Action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Style refs -->
        <item name="AppTheme.PopupOverlay">@style/ThemeOverlay.AppCompat</item>
        <item name="AppTheme.AppBarOverlay">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="AppTheme.ToolbarTitle">@style/AppTheme.ToolbarTitle</item>
        <item name="AppTheme.Toolbar">@style/AppTheme.Toolbar.Dark</item>
        <item name="AppTheme.ListView">@style/AppTheme.ListView.Dark</item>
    </style>

    <!-- Toolbar dark theme -->
    <style name="AppTheme.Toolbar.Dark" parent="AppTheme.Dark">
        <item name="android:textColorSecondary">?colorAccent</item>
    </style>

    <!-- ListView dark theme -->
    <style name="AppTheme.ListView.Dark" parent="AppTheme.Dark">
        <item name="android:divider">?colorBorder</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
